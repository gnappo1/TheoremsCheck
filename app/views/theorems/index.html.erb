<h1>Theorems:</h1>

<br><br><br><br>

<%= render partial: 'search'%>

<br><br>

<% if @theorems.present? %>
  <%= render partial: 'theorems_display', locals: {theorems: @theorems} %>
<% elsif !@theorems.present? &&  params[:search] %>
  <div class="frame">
    <div id="theorem-info" style="text-align: center;">
      <h3>There are no theorems containing the term(s) "<%= params[:search] %>".</h3>
    </div>
  </div>
<% end %>

<br><br>

<%= link_to "New Theorem", new_theorem_path, class: "btn btn-primary", id: "new_theorem_form" %>

<div id="form_div" style="display: none;"></div>
