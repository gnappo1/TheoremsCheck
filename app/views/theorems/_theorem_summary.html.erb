<h3><%= link_to theorem.name, theorem %></h3>
<div class="theorem-statement"><%= truncate theorem.statement %></div>
<% if current_user.admin? %>
  <strong><p>Created by: <%= link_to theorem.created_by, user_by_email(theorem.created_by) %></p></strong>
  <strong><%= link_to "Edit", edit_theorem_path(theorem), class: "btn btn-primary btn-xs", id: "theorem- theorem.id" %>  <%= button_to "Destroy", theorem_path(theorem), class: "btn btn-danger btn-xs", method: :delete, data: {confirm: "Are you sure?"} %></strong>
<% end %>
<div class="edit_form"></div>
<div id="line" style="margin-right:auto; margin-left:auto;"></div>
