<div class="frame">
  <div class="scientist-theorems">
    <ul>
      <h3>(Year of Birth: <%= @scientist.birth_before_christ? %> - Year of Death: <%= @scientist.death_before_christ? %>)</h3><br>
      <%= link_to "New Scientist", new_scientist_path, class: "btn btn-primary", id: "button", :method => :get %>
      <% @scientists.each do |s| %>
        <li><h3><%= link_to s.full_name, s %></h3></li><br>
        <div class="admin-info">
          <% if current_user.admin? %>
            <strong><p>Created by: <%= s.created_by %></p></strong>
            <strong><%= link_to "Edit", edit_scientist_path(s), class: "btn btn-primary btn-xs" %>  <%= button_to "Destroy", s, class: "btn btn-danger btn-xs", method: :delete, data: {confirm: "Are you sure?"} %></strong></strong>
          <% end %>
        </div>
      <% end %>
    </ul>
  </div>
</div>
