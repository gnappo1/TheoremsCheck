<h1>Sign Up</h1><br><br><br><br>
<div class="frame">
  <div class="intro">
    <div class="authform">
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "form-horizontal center"}) do |f| %>
        <%= devise_error_messages! %><br>
        <div class="form-group">
          <h4><%= f.label :email, class: "col-md-4 control-label" %></h4>
          <div class="col-md-4">
            <%= f.email_field :email, :autofocus => true, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <h4><%= f.label :password, class: "col-md-4 control-label" %></h4>
          <div class="col-md-4">
            <%= f.password_field :password, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <h4><%= f.label :password_confirmation, class: "col-md-4 control-label" %></h4>
          <div class="col-md-4">
            <%= f.password_field :password_confirmation, class: 'form-control' %>
          </div>
        </div>

        <%= f.submit 'Sign up', :class => 'btn btn-primary' %><br><br>
      <% end %>
    </div>
  </div>
</div>
