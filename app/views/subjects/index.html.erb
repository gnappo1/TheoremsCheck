<h1>Subjects:</h1>

<br><br><br><br><br><br><br><br>

<%= render partial: 'subjects', locals: {subjects: @subjects} %>

<br><br>

<div class="frame">
  <div class="container-fluid text-center" id="new-subject-form">
    <strong><h3>Add new Subject:</h3></strong>
    <%= render partial: 'form', locals: {subject: @subject} %>
  </div>
</div>

<script id="subject-template" type="text/javascript">
  <li class="subject" id="subject-{{id}}"><a href="/subjects/{{id}}">{{name}}
    <div class="admin-info">
      <strong><p>Created by: <a href="/users/1 %>">{{created_by}}</a></p></strong>
      <strong><a class="btn btn-primary btn-xs" href="/subjects/{{id}}/edit">Edit</a>
      <form class="button_to" method="post" action="/subjects/{{id}}">
        <input type="hidden" name="_method" value="delete">
        <input class="btn btn-danger btn-xs" data-confirm="Are you sure?" type="submit" value="Destroy">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      </form>
    </div>
  </li>
</script>
