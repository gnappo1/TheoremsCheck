<% if @quote.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@quote.errors.count, "error") %>
      prohibited this Quote from being saved:
    </h2>
    <ul>
    <% @quote.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<br>

<%= form_for [@scientist, @quote], :html => {:class => "form-horizontal center"} do |f| %>
  <div class="form-group">
    <h4><%= f.label :text, "Quote:", class: "col-md-4 control-label" %></h4>
    <div class="col-md-4">
      <%= f.text_field :text, :required => true, class: "form-control" %>
    </div>
  </div>

  <%= f.hidden_field :created_by, :value => current_user.email %>

  <%= f.submit "Submit", class: "btn btn-default btn-primary", id: "submit-button" %>
<% end %>
