<div class="frame">
  <div class="all-quotes">
    <% if !@quotes.empty? %>
      <ul>
        <% @quotes.each do |q| %>
          <h4 style="text-align: center;"><%= link_to (truncate q.text), scientist_quote_path(q.scientist, q) %></h4>
          <div style="text-align: center;"><strong>By: <%= link_to q.scientist.full_name, q.scientist %></strong></div>
          <div class="admin-info" style="text-align: center;">
            <% if current_user.admin? %>
              <strong><p>Created by: <%= link_to q.created_by, user_by_email(q.created_by) %></p></strong>
              <strong><%= link_to "Edit", edit_scientist_quote_path(q.scientist, q), class: "btn btn-primary btn-xs" %>  <%= button_to "Destroy", [q.scientist, q], class: "btn btn-danger btn-xs", method: :delete, data: {confirm: "Are you sure?"} %></strong>
            <% end %>
          </div>
          <div id="line" style="margin-right:auto; margin-left:auto;"></div>
        <% end %>
      </ul>
    <% else %>
      <h3>Currently there are no quotes to show</h3>
    <% end %>
  </div>
</div>
