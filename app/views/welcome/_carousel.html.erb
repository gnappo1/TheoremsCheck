<div id="myCarousel" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
    <li data-target="#myCarousel" data-slide-to="3"></li>
    <li data-target="#myCarousel" data-slide-to="4"></li>
    <li data-target="#myCarousel" data-slide-to="5"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item active">
      <img src="https://upload.wikimedia.org/wikipedia/commons/e/e7/Georg_Cantor2.jpg" alt="Cantor">
      <div class="carousel-caption">
        <h3>Georg Cantor</h3>
        <p>1845 - 1918</p>
      </div>
    </div>

    <div class="item">
      <img src="http://www.deism.com/images/Einstein_laughing.jpeg" alt="Einstein">
      <div class="carousel-caption">
        <h3>Albert Einstein</h3>
        <p>1879 - 1955</p>
      </div>
    </div>

    <div class="item">
      <img src="http://www.aphorism4all.com/images/1355816345.jpg" alt="Bohr">
      <div class="carousel-caption">
        <h3>Niels Bohr</h3>
        <p>1885 - 1962</p>
      </div>
    </div>

    <div class="item">
      <img src="https://wattsupwiththat.files.wordpress.com/2013/09/clip_image014_thumb1.jpg"   alt="Galileo">
      <div class="carousel-caption">
        <h3>Galileo Galilei</h3>
        <p>1564 - 1642</p>
      </div>
    </div>

    <div class="item">
      <img src="http://members.iif.hu/visontay/ponticulus/img1/portrait/maxwell-james-clerk2.jpg" alt="Maxwell">
      <div class="carousel-caption">
        <h3>James Clerk Maxwell</h3>
        <p>1831 - 1879</p>
      </div>
    </div>

    <div class="item">
      <img src="https://upload.wikimedia.org/wikipedia/commons/9/9b/Carl_Friedrich_Gauss.jpg" alt="Gauss">
      <div class="carousel-caption">
        <h3>Carl Friedrich Gauss</h3>
        <p>1777 - 1855</p>
      </div>
    </div>
  </div>

  <!-- Left and right controls -->
  <a class="left carousel-control" href="#myCarousel" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#myCarousel" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
