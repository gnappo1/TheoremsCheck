<div id="left">
  <% if !@scientists.empty? %>
    <% @scientists.each do |s| %>
      <h3><%= link_to s.full_name, s %></h3><br>
    <% end %>
  <% else %>
    <h3>Currently no scientists have been created today. Be the first today to <%= link_to "create", new_scientist_path %> a new one!</h3>
  <% end %>
</div>
<div id="right">
  <% if !@theorems.empty? %>
    <% @theorems.each do |t| %>
      <h3><%= link_to t.name, t %></h3><br>
    <% end %>
  <% else %>
    <h3>Currently no theorems have been created today. Be the first today to <%= link_to "create", new_theorem_path %> a new one!</h3>
  <% end %>
</div>
